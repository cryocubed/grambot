<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity"
  minHeight="-Infinity"
  minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
  xmlns="http://javafx.com/javafx/8" fx:controller="view.AppController">
  <BorderPane prefHeight="200.0" prefWidth="200.0">
    <top>
      <HBox BorderPane.alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
        <Label text="Label" fx:id="lblToCopyTo"/>
        <Button mnemonicParsing="false" onAction="#transferText" text="Set text"/>
        <TextField id="txtToCopyFrom" fx:id="txtToCopyFrom"/>
      </HBox>
    </top>
  </BorderPane>
</StackPane>
